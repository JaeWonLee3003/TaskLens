<UserControl x:Class="TaskLens.Views.HomeView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             mc:Ignorable="d"
             Height="Auto" Width="Auto">

    <UserControl.Resources>
        <!-- ðŸŽ¨ Modern Card Animations -->
        <Storyboard x:Key="CardHoverIn">
            <DoubleAnimation Storyboard.TargetProperty="(UIElement.RenderTransform).(ScaleTransform.ScaleX)"
                           To="1.05" Duration="0:0:0.2">
                <DoubleAnimation.EasingFunction>
                    <QuadraticEase EasingMode="EaseOut"/>
                </DoubleAnimation.EasingFunction>
            </DoubleAnimation>
            <DoubleAnimation Storyboard.TargetProperty="(UIElement.RenderTransform).(ScaleTransform.ScaleY)"
                           To="1.05" Duration="0:0:0.2">
                <DoubleAnimation.EasingFunction>
                    <QuadraticEase EasingMode="EaseOut"/>
                </DoubleAnimation.EasingFunction>
            </DoubleAnimation>
        </Storyboard>
        
        <Storyboard x:Key="CardHoverOut">
            <DoubleAnimation Storyboard.TargetProperty="(UIElement.RenderTransform).(ScaleTransform.ScaleX)"
                           To="1.0" Duration="0:0:0.2">
                <DoubleAnimation.EasingFunction>
                    <QuadraticEase EasingMode="EaseOut"/>
                </DoubleAnimation.EasingFunction>
            </DoubleAnimation>
            <DoubleAnimation Storyboard.TargetProperty="(UIElement.RenderTransform).(ScaleTransform.ScaleY)"
                           To="1.0" Duration="0:0:0.2">
                <DoubleAnimation.EasingFunction>
                    <QuadraticEase EasingMode="EaseOut"/>
                </DoubleAnimation.EasingFunction>
            </DoubleAnimation>
        </Storyboard>

        <!-- âœ¨ Glassmorphism Card Style -->
        <Style x:Key="StatCardStyle" TargetType="Border" BasedOn="{StaticResource GlassCardStyle}">
            <Setter Property="RenderTransform">
                <Setter.Value>
                    <ScaleTransform ScaleX="1" ScaleY="1"/>
                </Setter.Value>
            </Setter>
            <Setter Property="RenderTransformOrigin" Value="0.5,0.5"/>
            <Style.Triggers>
                <EventTrigger RoutedEvent="MouseEnter">
                    <BeginStoryboard Storyboard="{StaticResource CardHoverIn}"/>
                </EventTrigger>
                <EventTrigger RoutedEvent="MouseLeave">
                    <BeginStoryboard Storyboard="{StaticResource CardHoverOut}"/>
                </EventTrigger>
            </Style.Triggers>
        </Style>
    </UserControl.Resources>

    <Grid Margin="10" Background="{DynamicResource BackgroundBrush}">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <!-- ðŸŒŸ Hero Section -->
        <StackPanel Grid.Row="0" Margin="0,0,0,40">
            <TextBlock Text="System Overview" Margin="20 20 20 0"
                       FontSize="32"
                       FontWeight="Light"
                       Foreground="{DynamicResource TextBrush}"
                       HorizontalAlignment="Left"/>
            <TextBlock Text="ì‹¤ì‹œê°„ ì‹œìŠ¤í…œ ë¦¬ì†ŒìŠ¤ ëª¨ë‹ˆí„°ë§"
                       FontSize="16"
                       FontWeight="Normal"
                       Foreground="{DynamicResource TextSecondaryBrush}"
                       Margin="20,28,20,0"
                       HorizontalAlignment="Left"/>
        </StackPanel>

        <!-- ðŸ“Š Stats Cards - Responsive Layout -->
        <ScrollViewer Grid.Row="2" Margin="20,40" VerticalScrollBarVisibility="Auto">
            <WrapPanel Orientation="Horizontal" HorizontalAlignment="Center" Margin="20">

                <!-- ðŸ’» CPU Card -->
                <Border Style="{StaticResource StatCardStyle}"
                        Background="{DynamicResource CpuCardBrush}"
                        Padding="32"
                        MinHeight="180"
                        Width="300"
                        Margin="10"
                        Cursor="Hand">
                    <Grid>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="*"/>
                            <RowDefinition Height="Auto"/>
                        </Grid.RowDefinitions>
                        
                        <!-- Icon & Title -->
                        <StackPanel Grid.Row="0" Orientation="Horizontal" Margin="0,0,0,20">
                            <Border Background="#33FFFFFF"
                                    CornerRadius="12"
                                    Width="48"
                                    Height="48"
                                    Margin="0,0,16,0">
                                <TextBlock Text="ðŸ’»"
                                          FontSize="24"
                                          HorizontalAlignment="Center"
                                          VerticalAlignment="Center"/>
                            </Border>
                            <StackPanel VerticalAlignment="Center">
                                <TextBlock Text="CPU Usage"
                                          FontSize="18"
                                          FontWeight="SemiBold"
                                          Foreground="White"/>
                                <TextBlock Text="Processor"
                                          FontSize="12"
                                          Foreground="#CCFFFFFF"/>
                            </StackPanel>
                        </StackPanel>
                        
                        <!-- Value -->
                        <TextBlock Grid.Row="1"
                                  Text="{Binding CpuUsage}"
                                  FontSize="36"
                                  FontWeight="Bold"
                                  Foreground="White"
                                  HorizontalAlignment="Left"
                                  VerticalAlignment="Center"/>
                        
                        <!-- Trend Indicator -->
                        <StackPanel Grid.Row="2" Orientation="Horizontal">
                            <Border Background="#33FFFFFF"
                                    CornerRadius="4"
                                    Padding="8,4">
                                <TextBlock Text="â†— Real-time"
                                          FontSize="11"
                                          Foreground="White"/>
                            </Border>
                        </StackPanel>
                    </Grid>
                </Border>

                <!-- ðŸ§  RAM Card -->
                <Border Style="{StaticResource StatCardStyle}"
                        Background="{DynamicResource RamCardBrush}"
                        Padding="32"
                        MinHeight="180"
                        Width="300"
                        Margin="10"
                        Cursor="Hand">
                    <Grid>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="*"/>
                            <RowDefinition Height="Auto"/>
                        </Grid.RowDefinitions>
                        
                        <!-- Icon & Title -->
                        <StackPanel Grid.Row="0" Orientation="Horizontal" Margin="0,0,0,20">
                            <Border Background="#33FFFFFF"
                                    CornerRadius="12"
                                    Width="48"
                                    Height="48"
                                    Margin="0,0,16,0">
                                <TextBlock Text="ðŸ§ "
                                          FontSize="24"
                                          HorizontalAlignment="Center"
                                          VerticalAlignment="Center"/>
                            </Border>
                            <StackPanel VerticalAlignment="Center">
                                <TextBlock Text="Memory Usage"
                                          FontSize="18"
                                          FontWeight="SemiBold"
                                          Foreground="White"/>
                                <TextBlock Text="RAM"
                                          FontSize="12"
                                          Foreground="#CCFFFFFF"/>
                            </StackPanel>
                        </StackPanel>
                        
                        <!-- Value -->
                        <TextBlock Grid.Row="1"
                                  Text="{Binding RamUsage}"
                                  FontSize="36"
                                  FontWeight="Bold"
                                  Foreground="White"
                                  HorizontalAlignment="Left"
                                  VerticalAlignment="Center"/>
                        
                        <!-- Trend Indicator -->
                        <StackPanel Grid.Row="2" Orientation="Horizontal">
                            <Border Background="#33FFFFFF"
                                    CornerRadius="4"
                                    Padding="8,4">
                                <TextBlock Text="ðŸ“ˆ Monitoring"
                                          FontSize="11"
                                          Foreground="White"/>
                            </Border>
                        </StackPanel>
                    </Grid>
                </Border>

                <!-- âš ï¸ Warnings Card -->
                <Border Style="{StaticResource StatCardStyle}"
                        Background="{DynamicResource WarningCardBrush}"
                        Padding="32"
                        MinHeight="180"
                        Width="300"
                        Margin="10"
                        Cursor="Hand">
                    <Grid>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="*"/>
                            <RowDefinition Height="Auto"/>
                        </Grid.RowDefinitions>
                        
                        <!-- Icon & Title -->
                        <StackPanel Grid.Row="0" Orientation="Horizontal" Margin="0,0,0,20">
                            <Border Background="#33FFFFFF"
                                    CornerRadius="12"
                                    Width="48"
                                    Height="48"
                                    Margin="0,0,16,0">
                                <TextBlock Text="âš ï¸"
                                          FontSize="24"
                                          HorizontalAlignment="Center"
                                          VerticalAlignment="Center"/>
                            </Border>
                            <StackPanel VerticalAlignment="Center">
                                <TextBlock Text="System Alerts"
                                          FontSize="18"
                                          FontWeight="SemiBold"
                                          Foreground="White"/>
                                <TextBlock Text="Warnings"
                                          FontSize="12"
                                          Foreground="#CCFFFFFF"/>
                            </StackPanel>
                        </StackPanel>
                        
                        <!-- Value -->
                        <TextBlock Grid.Row="1"
                                  Text="{Binding WarningCount}"
                                  FontSize="36"
                                  FontWeight="Bold"
                                  Foreground="White"
                                  HorizontalAlignment="Left"
                                  VerticalAlignment="Center"/>
                        
                        <!-- Status Indicator -->
                        <StackPanel Grid.Row="2" Orientation="Horizontal">
                            <Border Background="#33FFFFFF"
                                    CornerRadius="4"
                                    Padding="8,4">
                                <TextBlock Text="ðŸ›¡ï¸ Protected"
                                          FontSize="11"
                                          Foreground="White"/>
                            </Border>
                        </StackPanel>
                    </Grid>
                </Border>
            </WrapPanel>
        </ScrollViewer>
    </Grid>
</UserControl>
