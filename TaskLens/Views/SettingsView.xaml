<UserControl x:Class="TaskLens.Views.SettingsView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             mc:Ignorable="d">

    <UserControl.Resources>
        <!-- 🎨 Modern Toggle Switch Style -->
        <Style x:Key="ModernToggleStyle" TargetType="CheckBox">
            <Setter Property="Foreground" Value="{DynamicResource TextBrush}"/>
            <Setter Property="FontSize" Value="15"/>
            <Setter Property="FontWeight" Value="Medium"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="CheckBox">
                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="Auto"/>
                            </Grid.ColumnDefinitions>
                            
                            <ContentPresenter Grid.Column="0" 
                                            VerticalAlignment="Center"
                                            Margin="0,0,16,0"/>
                            
                            <!-- Toggle Switch -->
                            <Border Grid.Column="1"
                                   x:Name="SwitchBorder"
                                   Width="50" 
                                   Height="26" 
                                   CornerRadius="13"
                                   Background="{DynamicResource BorderBrush}">
                                <Border x:Name="SwitchThumb"
                                       Width="20" 
                                       Height="20" 
                                       CornerRadius="10"
                                       Background="White"
                                       HorizontalAlignment="Left"
                                       Margin="3,0,0,0">
                                    <Border.RenderTransform>
                                        <TranslateTransform x:Name="SwitchTransform"/>
                                    </Border.RenderTransform>
                                </Border>
                            </Border>
                        </Grid>
                        
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsChecked" Value="True">
                                <Setter TargetName="SwitchBorder" Property="Background" Value="{DynamicResource AccentBrush}"/>
                                <Trigger.EnterActions>
                                    <BeginStoryboard>
                                        <Storyboard>
                                            <DoubleAnimation Storyboard.TargetName="SwitchTransform"
                                                           Storyboard.TargetProperty="X"
                                                           To="24" Duration="0:0:0.2">
                                                <DoubleAnimation.EasingFunction>
                                                    <QuadraticEase EasingMode="EaseOut"/>
                                                </DoubleAnimation.EasingFunction>
                                            </DoubleAnimation>
                                        </Storyboard>
                                    </BeginStoryboard>
                                </Trigger.EnterActions>
                                <Trigger.ExitActions>
                                    <BeginStoryboard>
                                        <Storyboard>
                                            <DoubleAnimation Storyboard.TargetName="SwitchTransform"
                                                           Storyboard.TargetProperty="X"
                                                           To="0" Duration="0:0:0.2">
                                                <DoubleAnimation.EasingFunction>
                                                    <QuadraticEase EasingMode="EaseOut"/>
                                                </DoubleAnimation.EasingFunction>
                                            </DoubleAnimation>
                                        </Storyboard>
                                    </BeginStoryboard>
                                </Trigger.ExitActions>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
        
        <!-- 💎 Setting Card Style -->
        <Style x:Key="SettingCardStyle" TargetType="Border" BasedOn="{StaticResource ModernCardStyle}">
            <Setter Property="Padding" Value="24"/>
            <Setter Property="Margin" Value="0,0,0,16"/>
            <Setter Property="MinHeight" Value="80"/>
        </Style>
    </UserControl.Resources>

    <Grid Background="{DynamicResource BackgroundBrush}" Margin="10">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <!-- 🌟 Hero Section -->
        <StackPanel Grid.Row="0" Margin="0,0,0,30">
            <TextBlock Text="Settings &amp; Preferences" Margin="20 20 20 0"
                       FontSize="32" 
                       FontWeight="Light" 
                       Foreground="{DynamicResource TextBrush}"/>
            <TextBlock Text="애플리케이션 동작 방식과 알림 설정을 관리하세요" 
                       FontSize="16" 
                       Foreground="{DynamicResource TextSecondaryBrush}"
                       Margin="20 20 20 0"/>
        </StackPanel>

        <!-- ⚙️ Settings Content -->
        <ScrollViewer Grid.Row="1" VerticalScrollBarVisibility="Auto" Margin="20,0,20,20">
            <StackPanel MaxWidth="600" HorizontalAlignment="Left">
                
                <!-- 🏃 System Settings Group -->
                <TextBlock Text="System" 
                          FontSize="20" 
                          FontWeight="SemiBold" 
                          Foreground="{DynamicResource TextBrush}"
                          Margin="0,0,0,16"/>

                <!-- Auto Start Setting -->
                <Border Style="{StaticResource SettingCardStyle}">
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="Auto"/>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="Auto"/>
                        </Grid.ColumnDefinitions>
                        
                        <Border Grid.Column="0"
                                Background="{DynamicResource AccentBrush}" 
                                CornerRadius="12" 
                                Width="40" 
                                Height="40" 
                                Margin="0,0,16,0">
                            <TextBlock Text="🚀" 
                                      FontSize="20" 
                                      HorizontalAlignment="Center" 
                                      VerticalAlignment="Center"/>
                        </Border>
                        
                        <StackPanel Grid.Column="1" VerticalAlignment="Center">
                            <TextBlock Text="Auto Start" 
                                      FontSize="16" 
                                      FontWeight="SemiBold" 
                                      Foreground="{DynamicResource TextBrush}"/>
                            <TextBlock Text="시스템 시작 시 자동으로 TaskLens 실행" 
                                      FontSize="13" 
                                      Foreground="{DynamicResource TextSecondaryBrush}"
                                      Margin="0,2,0,0"/>
                        </StackPanel>
                        
                        <CheckBox Grid.Column="2"
                                 Style="{StaticResource ModernToggleStyle}"
                                 IsChecked="{Binding AutoStart, Mode=TwoWay}"/>
                    </Grid>
                </Border>

                <!-- 📊 Monitoring Settings Group -->
                <TextBlock Text="Monitoring" 
                          FontSize="20" 
                          FontWeight="SemiBold" 
                          Foreground="{DynamicResource TextBrush}"
                          Margin="0,24,0,16"/>

                <!-- CPU Warning Setting -->
                <Border Style="{StaticResource SettingCardStyle}">
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="Auto"/>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="Auto"/>
                        </Grid.ColumnDefinitions>
                        
                        <Border Grid.Column="0"
                                Background="{DynamicResource CpuCardBrush}" 
                                CornerRadius="12" 
                                Width="40" 
                                Height="40" 
                                Margin="0,0,16,0">
                            <TextBlock Text="💻" 
                                      FontSize="20" 
                                      HorizontalAlignment="Center" 
                                      VerticalAlignment="Center"/>
                        </Border>
                        
                        <StackPanel Grid.Column="1" VerticalAlignment="Center">
                            <TextBlock Text="CPU Alerts" 
                                      FontSize="16" 
                                      FontWeight="SemiBold" 
                                      Foreground="{DynamicResource TextBrush}"/>
                            <TextBlock Text="CPU 사용률이 높을 때 경고 알림 표시" 
                                      FontSize="13" 
                                      Foreground="{DynamicResource TextSecondaryBrush}"
                                      Margin="0,2,0,0"/>
                        </StackPanel>
                        
                        <CheckBox Grid.Column="2"
                                 Style="{StaticResource ModernToggleStyle}"
                                 IsChecked="{Binding EnableCpuWarning, Mode=TwoWay}"/>
                    </Grid>
                </Border>

                <!-- RAM Warning Setting -->
                <Border Style="{StaticResource SettingCardStyle}">
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="Auto"/>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="Auto"/>
                        </Grid.ColumnDefinitions>
                        
                        <Border Grid.Column="0"
                                Background="{DynamicResource RamCardBrush}" 
                                CornerRadius="12" 
                                Width="40" 
                                Height="40" 
                                Margin="0,0,16,0">
                            <TextBlock Text="🧠" 
                                      FontSize="20" 
                                      HorizontalAlignment="Center" 
                                      VerticalAlignment="Center"/>
                        </Border>
                        
                        <StackPanel Grid.Column="1" VerticalAlignment="Center">
                            <TextBlock Text="Memory Alerts" 
                                      FontSize="16" 
                                      FontWeight="SemiBold" 
                                      Foreground="{DynamicResource TextBrush}"/>
                            <TextBlock Text="메모리 사용률이 높을 때 경고 알림 표시" 
                                      FontSize="13" 
                                      Foreground="{DynamicResource TextSecondaryBrush}"
                                      Margin="0,2,0,0"/>
                        </StackPanel>
                        
                        <CheckBox Grid.Column="2"
                                 Style="{StaticResource ModernToggleStyle}"
                                 IsChecked="{Binding EnableRamWarning, Mode=TwoWay}"/>
                    </Grid>
                </Border>

                <!-- 🎨 Appearance Settings Group -->
                <TextBlock Text="Appearance" 
                          FontSize="20" 
                          FontWeight="SemiBold" 
                          Foreground="{DynamicResource TextBrush}"
                          Margin="0,24,0,16"/>

                <!-- Dark Theme Setting -->
                <Border Style="{StaticResource SettingCardStyle}">
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="Auto"/>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="Auto"/>
                        </Grid.ColumnDefinitions>
                        
                        <Border Grid.Column="0"
                                Background="{DynamicResource WarningCardBrush}" 
                                CornerRadius="12" 
                                Width="40" 
                                Height="40" 
                                Margin="0,0,16,0">
                            <TextBlock Text="🌙" 
                                      FontSize="20" 
                                      HorizontalAlignment="Center" 
                                      VerticalAlignment="Center"/>
                        </Border>
                        
                        <StackPanel Grid.Column="1" VerticalAlignment="Center">
                            <TextBlock Text="Dark Theme" 
                                      FontSize="16" 
                                      FontWeight="SemiBold" 
                                      Foreground="{DynamicResource TextBrush}"/>
                            <TextBlock Text="어두운 테마로 눈의 피로를 줄여보세요" 
                                      FontSize="13" 
                                      Foreground="{DynamicResource TextSecondaryBrush}"
                                      Margin="0,2,0,0"/>
                        </StackPanel>
                        
                        <CheckBox Grid.Column="2"
                                 Style="{StaticResource ModernToggleStyle}"
                                 IsChecked="{Binding IsDarkTheme, Mode=TwoWay}"/>
                    </Grid>
                </Border>

                <!-- Language Setting -->
                <Border Style="{StaticResource SettingCardStyle}">
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="Auto"/>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="Auto"/>
                        </Grid.ColumnDefinitions>
                        
                        <Border Grid.Column="0"
                                Background="{DynamicResource AccentSecondaryBrush}" 
                                CornerRadius="12" 
                                Width="40" 
                                Height="40" 
                                Margin="0,0,16,0">
                            <TextBlock Text="🌐" 
                                      FontSize="20" 
                                      HorizontalAlignment="Center" 
                                      VerticalAlignment="Center"/>
                        </Border>
                        
                        <StackPanel Grid.Column="1" VerticalAlignment="Center">
                            <TextBlock Text="Language" 
                                      FontSize="16" 
                                      FontWeight="SemiBold" 
                                      Foreground="{DynamicResource TextBrush}"/>
                            <TextBlock Text="애플리케이션 언어 설정" 
                                      FontSize="13" 
                                      Foreground="{DynamicResource TextSecondaryBrush}"
                                      Margin="0,2,0,0"/>
                        </StackPanel>
                        
                        <ComboBox Grid.Column="2"
                                 x:Name="LanguageComboBox" 
                                 SelectedItem="{Binding SelectedLanguage, Mode=TwoWay}"
                                 DisplayMemberPath="DisplayName"
                                 Width="150"
                                 Height="36"
                                 Background="{DynamicResource SurfaceBrush}"
                                 Foreground="{DynamicResource TextBrush}"
                                 BorderBrush="{DynamicResource BorderBrush}"/>
                    </Grid>
                </Border>

                <!-- 💾 Save Button -->
                <Button Content="💾 Save Changes"
                        Command="{Binding SaveSettingsCommand}"
                        Style="{StaticResource ModernButtonStyle}"
                        HorizontalAlignment="Left"
                        Margin="0,32,0,40"
                        Padding="24,12"
                        FontSize="15"/>
            </StackPanel>
        </ScrollViewer>
    </Grid>
</UserControl>
